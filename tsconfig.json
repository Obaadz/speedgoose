{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "target": "es2019",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "lib",
      "allowJs": true,
      "noEmit": false,
      "removeComments": true,
      "declaration": true,
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["./src/**/*.ts", "./index.ts"]
  }